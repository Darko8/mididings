import sys
import mididings

if __name__ == '__main__':
    if len(sys.argv) == 2 and sys.argv[1] not in ('-h', '--help'):
        config = ''
        patch = sys.argv[1]
    elif len(sys.argv) == 3:
        config = sys.argv[1]
        patch = sys.argv[2]
    else:
        sys.exit("Usage: mididings [config] patch")

    mididings.config(**eval('{%s}' % config, mididings.__dict__))
    mididings.run(eval(patch, mididings.__dict__))
